<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/goldfield"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:text="Submit your information"
        android:textSize="20sp" />

    <TextView
        android:layout_marginTop="170dp"
        android:layout_marginLeft="-90dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="40dp"
        android:width="200dp"
        android:text="Area"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_width="182dp" />

    <TextView
        android:layout_marginTop="270dp"
        android:layout_marginLeft="-90dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="40dp"
        android:width="200dp"
        android:text="Land Type"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_width="182dp" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginLeft="-90dp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_height="40dp"
        android:width="200dp"
        android:textStyle="normal|bold"
        android:text="Crops Type"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginBottom="120dp"
        android:layout_width="162dp" />

    <TextView
        android:layout_marginTop="-130dp"
        android:layout_marginLeft="-90dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:text="Please choose area from the map"
        android:textStyle="normal|bold"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_width="182dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-90dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="wrap_content"
        android:width="00dp"
        android:text="You can also select from the choices below."
        android:textStyle="normal|bold"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_width="180dp" />

    <Button
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map_button"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="-130dp"/>

    <Spinner
        android:layout_marginTop="150dp"
        android:layout_marginLeft="-130dp"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_column="1"
        android:id="@+id/spinner_area"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:backgroundTint="@android:color/background_light"
        android:background="@android:color/holo_orange_light"
        />

    <Spinner
        android:layout_marginTop="270dp"
        android:layout_marginLeft="-130dp"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_column="1"
        android:id="@+id/spinner_land_type"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:backgroundTint="@android:color/background_light"
        android:background="@android:color/holo_orange_light"
        />

    <Spinner

        android:layout_marginBottom="120dp"
        android:layout_marginLeft="-130dp"
        android:id="@+id/spinner_crops_type"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:backgroundTint="@android:color/background_light"
        android:background="@android:color/holo_orange_light"
        />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_button"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginLeft="-180dp"
        android:layout_marginBottom="-10dp"/>



</GridLayout>